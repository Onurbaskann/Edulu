@model IEnumerable<Edulu3.Models.Entity.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="udiv"></div>
<div id="userpanel-container">
    <h2>Yönetici Paneli</h2>

    <p>
        @Html.ActionLink("Yeni Kullanıcı", "Create", null, new { @class = "btn btnKayit my-2" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegisterDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegisterDate)
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.UserId }, new { @class = "btn btnGuncel" }) |
                    @Html.ActionLink("Detay", "Details", new { id = item.UserId }, new { @class = "btn btnGuncel" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.UserId }, new { @class = "btn btnSil" })
                </td>
            </tr>
        }

    </table>
</div>